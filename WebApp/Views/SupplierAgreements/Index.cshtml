@using Business.Essentials.Model
@model IEnumerable<Business.Essentials.Model.SupplierAgreement>

@{
    ViewBag.Title = Business.Essentials.Resources.Title_SupplierAgreement;}

<h2>@Business.Essentials.Resources.DisplayName_SupplierAgreement</h2>

<p>
    @Html.ActionLink(Business.Essentials.Resources.CreateNew, "Create")
</p>
<table>
    <tr>
        <th>
            @Html.LabelFor(x => new SupplierAgreement().Supplier)
        </th>

        <th>
            @Html.LabelFor(x => new SupplierAgreement().Start)
        </th>

        <th>
            @Html.LabelFor(x => new SupplierAgreement().End)
        </th>
        <th>
            @Html.LabelFor(x => new SupplierAgreement().Comment)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>

        <td>
            @Html.ActionLink(Business.Essentials.Resources.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(Business.Essentials.Resources.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(Business.Essentials.Resources.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
