@using Business.Essentials
@using Business.Essentials.Model
@model IEnumerable<Business.Essentials.Model.PointOfSale>

@{
    ViewBag.Title = Resources.Title_PointOfSale;
}

<h2>@Resources.DisplayName_PointsOfSale</h2>

<p>
    @Html.ActionLink(Resources.CreateNew, "Create", new { }, new { @class = "button icon add" })
</p>
<table>
    <tr>
        <th>
            @Html.LabelFor(x => new PointOfSale().Code)
        </th>

        <th>
            @Html.LabelFor(x => new PointOfSale().Name)
        </th>
        
        <th>
            @Html.LabelFor(x => new PointOfSale().HostAddress)
        </th>

        <th>
            @Html.LabelFor(x => new PointOfSale().Comment)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.HostAddress)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td class="actions">
            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "button icon edit icon-only", @title = Resources.Edit })
            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "button icon view icon-only", @title = Resources.Details })
            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "button icon delete icon-only", @title = Resources.Delete })
        </td>
    </tr>
}

</table>
