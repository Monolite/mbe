@using Business.Essentials.WebApp.Helpers;
@using Business.Essentials.Model
@model IEnumerable<Business.Essentials.Model.Employee>

@{
    ViewBag.Title = Business.Essentials.Resources.Title_Employee;
}

<h2>@Business.Essentials.Resources.DisplayName_Employee</h2>

<p>
    @Html.ActionLink(Business.Essentials.Resources.CreateNew, "Create")
</p>
<table>
    <tr>
        <th>
            @Html.LabelFor(x => new Employee().FirstName)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().LastName)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().Birthday)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().TaxpayerId)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().Gender)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().PersonalId)
        </th>
        <th>
            @Html.LabelFor(x => new Employee().StartJobDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaxpayerId)
        </td>
        <td>
            @item.Gender.GetDisplayName()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonalId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartJobDate)
        </td>

        <td>
            @Html.ActionLink(Business.Essentials.Resources.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(Business.Essentials.Resources.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(Business.Essentials.Resources.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
