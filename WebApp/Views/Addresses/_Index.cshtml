@using Business.Essentials
@using Business.Essentials.Model
@model IEnumerable<Business.Essentials.Model.Address>

<p>
</p>
<table>
    <tr>
        <th>
            @Html.LabelFor(x => new Address().TaxpayerId)
        </th>

        <th>
            @Html.LabelFor(x => new Address().TaxpayerName)
        </th>
        <th>
            @Html.LabelFor(x => new Address().Street)
        </th>
        <th>
            @Html.LabelFor(x => new Address().Neighborhood)
        </th>
        <th>
            @Html.LabelFor(x => new Address().Borough)
        </th>
        <th>
            @Html.LabelFor(x => new Address().State)
        </th>
         <th>
            @Html.LabelFor(x => new Address().ZipCode)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TaxpayerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaxpayerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
            @Html.DisplayFor(modelItem => item.ExteriorNumber)
            @Html.DisplayFor(modelItem => item.InteriorNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Neighborhood)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Borough)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td class="actions">
            @Html.ActionLink(" ", "Edit", "Addresses", new { id = item.Id }, new { @class = "button icon edit icon-only", @title = Resources.Edit })
            @Html.ActionLink(" ", "Details", "Addresses", new { id = item.Id }, new { @class = "button icon view icon-only", @title = Resources.Details })
            @Html.ActionLink(" ", "Delete", "Addresses", new { id = item.Id }, new { @class = "button icon delete icon-only", @title = Resources.Delete })
        </td>
    </tr>
}

</table>
