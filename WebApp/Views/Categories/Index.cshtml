@using Business.Essentials.Model
@model IEnumerable<Business.Essentials.Model.Category>

@{
    ViewBag.Title = Business.Essentials.Resources.Title_Category;
}

<h2>@Business.Essentials.Resources.Title_Category</h2>

<p>
    @Html.ActionLink(Business.Essentials.Resources.CreateNew, "Create")
</p>
<table>
    <tr>
        <th>
            @Html.LabelFor(x => new Category().Name)
        </th>
        <th>
            @Html.LabelFor(x => new Category().Comment)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>

        <td>
            @Html.ActionLink(Business.Essentials.Resources.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(Business.Essentials.Resources.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(Business.Essentials.Resources.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
