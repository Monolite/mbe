@using Business.Essentials.Model
@using Business.Essentials.WebApp.Helpers
@using Business.Essentials.WebApp.Models
@model Search<Product>

@{
    ViewBag.Title = Business.Essentials.Resources.Title_Product;
}

<h2>@Business.Essentials.Resources.DisplayName_Products</h2>

<p>
    @Html.ActionLink(Business.Essentials.Resources.CreateNew, "Create")
</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
     	<div class="editor-label">
            @Html.LabelFor(x => x.Pattern)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Pattern)
            @Html.HiddenFor(x => x.Offset)
            @Html.HiddenFor(x => x.Limit)
            <input type="submit" value= "@Business.Essentials.Resources.Search" />
        </div>
        <p>
            @if (Model.Offset >= Model.Limit)
            {
                @Html.ActionLink("<", "Index", new { Pattern = Model.Pattern, Limit = Model.Limit, Offset = Model.Offset - Model.Limit })
            }
            @if (Model.Results.Count >= Model.Limit)
            {
                @Html.ActionLink(">", "Index", new { Pattern = Model.Pattern, Limit = Model.Limit, Offset = Model.Offset + Model.Limit })
            }
            
            @Html.Encode(string.Format("{0} elementos listados.", Model.Results.Count))
            @Html.ValidationMessageFor(x => x.Pattern)
        </p>
    </fieldset>
}

<table>
    <tr>
        <th></th>
        <th>
            @Html.LabelFor(x => new Product().Code)
        </th>
        <th>
            @Html.LabelFor(x => new Product().SKU)
        </th>
        <th>
            @Html.LabelFor(x => new Product().Name)
        </th>
        <th>
            @Html.LabelFor(x => new Product().Cost)
        </th>
        <th>
            @Html.LabelFor(x => new Product().UnitOfMeasurement)
        </th>
        <th>
            @Html.LabelFor(x => new Product().Price1)
        </th>
        <th>
            @Html.LabelFor(x => new Product().Price2)
        </th>
        <th>
            @Html.LabelFor(x => new Product().Price3)
        </th>
        <th>
            @Html.LabelFor(x => new Product().Price4)
        </th>
        <th>
            @Html.LabelFor(x => new Product().Category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Results)
{
    <tr>
        <td>
            @Html.ActionImage("Details", new { id = item.Id }, Url.Content("~/Photos/" + item.Photo),
                              Business.Essentials.Resources.Details,
                              new { title = Business.Essentials.Resources.Details,  @class = "small" })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SKU)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.UnitOfMeasurement)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price1)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Price2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price3)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Price4)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
  
        <td>
            @Html.ActionLink(Business.Essentials.Resources.Edit, "Edit", new { id = item.Id })
            @Html.ActionLink(Business.Essentials.Resources.Delete, "Delete", new { id = item.Id })
        </td>
    </tr>
}


</table>
