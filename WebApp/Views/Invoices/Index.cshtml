@using Business.Essentials
@using Business.Essentials.Model
@using Business.Essentials.WebApp.Helpers
@model IEnumerable<SalesInvoice>

@{
    ViewBag.Title = Resources.Title_SalesInvoice;
    var CurrentUser = Html.CurrentUser() ?? new User();
    var Privilege = Html.GetPrivilege(CurrentUser, SystemObjects.SalesInvoices);
}

<h2>@Business.Essentials.Resources.DisplayName_SalesInvoices</h2>

<p>
@if(Privilege.AllowCreate)
{
    @Html.ActionLink(Resources.New, "New", new { }, new { @class = "button icon add" })
}
</p>
<table>
    <tr>
        <th>
            @Html.LabelFor(x => new SalesInvoice().Id)
        </th>

        <th>
            @Html.LabelFor(x => new SalesInvoice().Customer)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="number">
            @Html.DisplayFor(x => item.Id)
        </td>

        <td>
            @Html.DisplayFor(x => item.Customer.Name)
        </td>

        <td class="actions">
        	@if(Privilege.AllowUpdate)
        	{
            	@Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "button icon edit icon-only", @title = Resources.Edit })
            }
        	@if(Privilege.AllowRead)
        	{
            	@Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "button icon view icon-only", @title = Resources.Details })
            }
        </td>
    </tr>
}
</table>