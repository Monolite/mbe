        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comment)
        </div>
        
        @Html.Hidden("OwnerId", (object)ViewBag.OwnerId)
        @Html.Hidden("OwnerType", (object)ViewBag.OwnerType)

        <p>
            <input type="submit" value="@Business.Essentials.Resources.Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Business.Essentials.Resources.BackToList, "Details", (string)ViewBag.OwnerType, new { id = ViewBag.OwnerId }, null)
</div>
