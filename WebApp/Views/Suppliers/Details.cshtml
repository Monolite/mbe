@using Business.Essentials.WebApp.Helpers;
@model Business.Essentials.Model.Supplier

@{
    ViewBag.Title = Business.Essentials.Resources.Details;
}

<h2>@Business.Essentials.Resources.Details</h2>

<fieldset>
    <legend>@Business.Essentials.Resources.Title_Supplier</legend>

    <div class="display-label">
        @Html.LabelFor(model => model.Code)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Code)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.Zone)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Zone)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.CreditLimit)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CreditLimit)
    </div>

    <div class="display-label">
        @Html.LabelFor(model => model.CreditDays)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CreditDays)
    </div>

</fieldset>
<p>
    @Html.ActionLink(Business.Essentials.Resources.Edit, "Edit", new { id=Model.Id }) |
    @Html.ActionLink(Business.Essentials.Resources.BackToList, "Index")
</p>

<fieldset>
    <legend>@Business.Essentials.Resources.DisplayName_Address</legend>
    <p>
        @Html.ActionLink(Business.Essentials.Resources.CreateNew, "CreateForSupplier", "Addresses", new { id = Model.Id }, null)
    </p>
    @Html.Partial("~/Views/Addresses/Index.cshtml", Model.Addresses)
</fieldset>

<fieldset>
    <legend>@Business.Essentials.Resources.DisplayName_Contacts</legend>
    <p>
        @Html.ActionLink(Business.Essentials.Resources.CreateNew, "CreateForSupplier", "Contacts", new { id = Model.Id }, null)
    </p>
    @Html.Partial("~/Views/Contacts/Index.cshtml", Model.Contacts)
</fieldset>

<fieldset>
    <legend>@Business.Essentials.Resources.DisplayName_BankAccount</legend>
    <p>
        @Html.ActionLink(Business.Essentials.Resources.CreateNew, "CreateForSupplier", "BankAccounts", new { id = Model.Id }, null)
    </p>
    @Html.Partial("~/Views/BankAccounts/Index.cshtml", Model.BanksAccounts)
</fieldset>