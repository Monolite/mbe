@model Business.Essentials.Model.SupplierAgreement

@{
    ViewBag.Title = Business.Essentials.Resources.CreateNew;
}

<h2>@Business.Essentials.Resources.Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.tokeninput.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.tokeninput.formatters.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/themes/base/token-input.css")" rel="stylesheet" type="text/css" />


@using (Html.BeginForm("Create", "SupplierAgreements")) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Business.Essentials.Resources.Title_SupplierAgreement</legend>
        
        @Html.HiddenFor(model => model.SupplierId)

        <div class="display-label">
            @Html.LabelFor(model => model.Supplier)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Supplier.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Start)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Start)
            @Html.ValidationMessageFor(model => model.Start)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.End)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.End)
            @Html.ValidationMessageFor(model => model.End)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Comment)
        </div>

        <p>
            <input type="submit" value="@Business.Essentials.Resources.Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Business.Essentials.Resources.BackToList, "Details", "Suppliers", new { id = Model.Supplier.Id }, null)
</div>