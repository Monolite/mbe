@model Business.Essentials.Model.Address

@{
    ViewBag.Title = Business.Essentials.Resources.CreateNew;
}

<h2>@Business.Essentials.Resources.Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Address"))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Business.Essentials.Resources.Title_Address</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TaxpayerId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TaxpayerId)
