@using Business.Essentials.Model
@model IEnumerable<Business.Essentials.Model.BankAccount>

<p>
</p>
<table>
    <tr>
        <th>
            @Html.LabelFor(x => new BankAccount().BankName)
        </th>
        <th>
            @Html.LabelFor(x => new BankAccount().AccountNumber)
        </th>
        <th>
            @Html.LabelFor(x => new BankAccount().Reference)
        </th>
        <th>
            @Html.LabelFor(x => new BankAccount().RoutingNumber)
        </th>
        <th>
            @Html.LabelFor(x => new BankAccount().Comment)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BankName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reference)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoutingNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>

        <td>
            @Html.ActionLink(Business.Essentials.Resources.Edit, "Edit", "BankAccounts", new { id=item.Id }, null) |
            @Html.ActionLink(Business.Essentials.Resources.Details, "Details", "BankAccounts", new { id = item.Id }, null) |
            @Html.ActionLink(Business.Essentials.Resources.Delete, "Delete", "BankAccounts", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>
