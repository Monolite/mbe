@using Business.Essentials;
@using Business.Essentials.Model
@using Business.Essentials.WebApp.Helpers;
@model IEnumerable<Business.Essentials.Model.Category>

@{
    ViewBag.Title = Business.Essentials.Resources.Title_Category;
}

<h2>@Business.Essentials.Resources.DisplayName_Categories</h2>

<p>
    @Html.ActionLink(Business.Essentials.Resources.CreateNew, "Create")
</p>
<table>
    <tr>
        <th>
            @Html.LabelFor(x => new Category().Name)
        </th>
        <th>
            @Html.LabelFor(x => new Category().Comment)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td class="actions">
            @Html.ActionImage(Url.Content("~/Content/icons/edit.png"), "Edit", new { id = item.Id },
                              new { alt = Resources.Edit, title = Resources.Edit })
            @Html.ActionImage(Url.Content("~/Content/icons/view-item.png"), "Details", new { id = item.Id },
                              new { alt = Resources.Details, title = Resources.Details })
            @Html.ActionImage(Url.Content("~/Content/icons/delete-item.png"), "Delete", new { id = item.Id },
                              new { alt = Resources.Delete, title = Resources.Delete })
        </td>
    </tr>
}

</table>
