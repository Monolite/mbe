@using Business.Essentials.WebApp.Helpers;
@model Business.Essentials.Model.User

@{
    ViewBag.Title = Business.Essentials.Resources.Details;
}

<h2>@Business.Essentials.Resources.Details</h2>

<fieldset>
    <legend>@Business.Essentials.Resources.User</legend>

    <div class="display-label">@Html.LabelFor(model => model.UserName)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserName)
    </div>

    <div class="display-label">@Html.LabelFor(model => model.Employee.Name)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Employee.Name)
    </div>

    <div class="display-label">@Html.LabelFor(model => model.Email)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Email)
    </div>

    <div class="display-label">
        @Html.DisplayFor(model => model.IsAdministrator)
        @Html.LabelFor(model => model.IsAdministrator)
    </div>
</fieldset>
<p>
    @Html.ActionLink(Business.Essentials.Resources.Edit, "Edit", new { id = Model.UserName }) |
    @Html.ActionLink(Business.Essentials.Resources.BackToList, "Index")
</p>
