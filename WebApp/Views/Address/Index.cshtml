@using Business.Essentials.Model
@model IEnumerable<Business.Essentials.Model.Address>

<p>
    @Html.ActionLink(Business.Essentials.Resources.CreateNew, "CreateForSupplier", "Address", new { id = ViewBag.OwnerId }, null)
</p>
<table>
    <tr>
        <th>
            @Html.LabelFor(x => new Address().TaxpayerId)
        </th>

        <th>
            @Html.LabelFor(x => new Address().TaxpayerName)
        </th>
        <th>
            @Html.LabelFor(x => new Address().Street)
        </th>
        <th>
            @Html.LabelFor(x => new Address().ExteriorNumber)
        </th>
        <th>
            @Html.LabelFor(x => new Address().InteriorNumber)
        </th>
        <th>
            @Html.LabelFor(x => new Address().Neighborhood)
        </th>
        <th>
            @Html.LabelFor(x => new Address().Borough)
        </th>
        <th>
            @Html.LabelFor(x => new Address().State)
        </th>
        <th>
            @Html.LabelFor(x => new Address().Country)
        </th>
         <th>
            @Html.LabelFor(x => new Address().ZipCode)
        </th>
        <th>
            @Html.LabelFor(x => new Address().Comment)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TaxpayerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaxpayerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Street)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExteriorNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InteriorNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Neighborhood)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Borough)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZipCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>

        <td>
            @Html.ActionLink(Business.Essentials.Resources.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(Business.Essentials.Resources.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(Business.Essentials.Resources.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
