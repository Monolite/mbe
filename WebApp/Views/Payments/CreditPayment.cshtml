@using Business.Essentials
@using Business.Essentials.WebApp.Helpers
@using Business.Essentials.Model
@using Business.Essentials.WebApp.Models
@model CustomerPayment

<link href="@Url.Content("~/Content/selection-options.css")" rel="stylesheet" type="text/css" />

<h2>@Resources.PayCredit</h2> 

<div id="pay-credit">
    <fieldset>
        <legend>@Resources.DisplayName_PayCredit</legend>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                
                <div class="editor-label">
                    @Html.LabelFor(x => x.Customer)
                    @Html.TextBoxFor(x => x.CustomerId)
                    @Html.ValidationMessageFor(x => x.CustomerId)
                </div>
                
                <div class="display-label">
                    @Html.LabelFor(x => x.Amount)
                </div>
                <div class="display-field">
                    @Html.EditorFor(x => x.Amount)
                </div>
                <div class="display-label">
                    @Html.LabelFor(x => x.Method)
                </div>
                <div class="editor-field">
                    <ul class="selection-options">
                    @foreach (var item in Enum.GetValues(typeof(PaymentMethod)))
                    {
                        <li>
	                        <label>
	                            @Html.RadioButtonFor(x => x.Method, (int)item)
	                            <span class="option-desc">
		                            <span class="icon dollar">@Resources.Pay</span>
		                            <span class="text">@(((PaymentMethod)item).GetDisplayName())</span>
	                            </span>
	                        </label>
	                    </li>
                    }
                    </ul>
                </div>
                <div id="reference" style="display:none">
                    <div class="display-label">
                        @Html.LabelFor(x => x.Reference)
                    </div>
                    <div class="display-field">
                        @Html.EditorFor(x => x.Reference)
                    </div>
                </div>
                <p><button id="pay" type="submit" class="icon pay">@Resources.Pay</button></p>
            }
    </fieldset>
</div>

<div id="back">
    @Html.ActionLink(Resources.BackToList, "Index", new { }, new { @class = "button icon back" })
</div>
<style type="text/css">
ul.token-input-list {
  width:100%;
}
</style>

<script type="text/javascript">
    $(function () {
        $("#Method").attr("checked", true);
        $(".selection-options>li:first-child").addClass("selected");

        $(":radio").change(function() {
            var status = $("#Method:checked").val();
            
            if (status === "4" || status === "5") {
                $("#reference").show("slow");
            } else {
                $("#reference").hide("slow");
            }
        });

        $("#CustomerId").tokenInput("@Url.Action("GetSuggestions", "Customers")", {
            hintText: "@Resources.HIntText",
            noResultsText: "@Resources.NoResultsText",
            searchingText: "@Resources.SearchingText",
            queryParam: "pattern",
            minChars: 1,
            tokenLimit: 1,
        });

        $(".selection-options>li").click(function () {
            $(".selection-options>li").removeClass("selected");
            $(this).addClass("selected");
        });
    });
</script>
