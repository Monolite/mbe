@using Business.Essentials
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/ticket.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <div id="logo">
            ·<img src="@Url.Content("~/Content/images/logo-ticket.png")" alt="@Resources.Alt_Logo" title="@Resources.Title_Logo"/>·
        </div>
        <h1>@Resources.Company</h1>
        @if (ViewBag.SkipAddress == null || !ViewBag.SkipAddress)
        {
        <h3>@Resources.CompanyTaxpayer</h3>
        <h3>@Resources.CompanyTaxpayerName</h3>
        <h3>@Resources.CompanyAddress</h3>
        }
        <h2>@ViewBag.Title</h2>
    </header>
    <section id="main">
        @RenderBody()
    </section>
    <footer>
    	@RenderSection("Footer", required: false)
	</footer>
</body>
</html>