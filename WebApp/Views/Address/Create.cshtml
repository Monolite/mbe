        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.TaxpayerName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TaxpayerName)
            @Html.ValidationMessageFor(model => model.TaxpayerName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Street)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Street)
            @Html.ValidationMessageFor(model => model.Street)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ExteriorNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ExteriorNumber)
            @Html.ValidationMessageFor(model => model.ExteriorNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.InteriorNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.InteriorNumber)
            @Html.ValidationMessageFor(model => model.InteriorNumber)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Neighborhood)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Neighborhood)
            @Html.ValidationMessageFor(model => model.Neighborhood)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Borough)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Borough)
            @Html.ValidationMessageFor(model => model.Borough)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.State)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.State)
            @Html.ValidationMessageFor(model => model.State)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Country)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Country)
